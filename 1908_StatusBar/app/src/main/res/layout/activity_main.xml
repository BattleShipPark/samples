<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/color_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Color (code)"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/color_theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Color (theme)"
        app:layout_constraintStart_toEndOf="@id/color_code"
        app:layout_constraintTop_toTopOf="@id/color_code" />

    <Button
        android:id="@+id/translucent_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Translucent (code)"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/color_code" />

    <Button
        android:id="@+id/translucent_theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Translucent (theme)"
        app:layout_constraintStart_toEndOf="@id/translucent_code"
        app:layout_constraintTop_toTopOf="@id/translucent_code" />

    <Button
        android:id="@+id/transparent1_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Transparent1 (code)"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/translucent_code" />

    <Button
        android:id="@+id/transparent2_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Transparent2 (code)"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/transparent1_code" />

</androidx.constraintlayout.widget.ConstraintLayout>